        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mes_POTG_Overwatch"
        mc:Ignorable="d"
        Title="Récupération des temps fort" Height="251.105" Width="751.519" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Closed="Window_Closed" Icon="download.ico">
    <Grid>
        <TextBox x:Name="textBox_POTG_path" HorizontalAlignment="Left" Height="23" Margin="183,77,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="509" IsEnabled="False" VerticalContentAlignment="Center" FontSize="15"/>
