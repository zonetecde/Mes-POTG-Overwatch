        <Button Style="{DynamicResource RoundCorner}" 
        Height="43" 
        VerticalAlignment="Top" 
        Content="Récupérer les informations des Temps Forts" 
        Margin="223,141,223,0" Background="White" Foreground="Black" BorderBrush="White" FontFamily="Verdana" Click="Button_Click_1" />
